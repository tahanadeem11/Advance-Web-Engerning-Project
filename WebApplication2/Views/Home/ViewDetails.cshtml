@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Uploaded Projects</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center mb-4">Uploaded Projects</h1>
        <div class="row">
            <div class="col-md-8 offset-md-2">
                @if (Model.Projects.Any())
                {
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Roll No</th>
                                <th>Semester</th>
                                <th>Program</th>
                                <th>Project</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var project in Model.Projects)
                            {
                                <tr>
                                    <td>@project.Name</td>
                                    <td>@project.RollNo</td>
                                    <td>@project.Semester</td>
                                    <td>@project.Program</td>
                                    <td><a href="@project.ProjectUrl" target="_blank">@project.ProjectName</a></td>
                                    <td>
                                        <a href="@Url.Page("Edit", new { id = project.Id })" class="btn btn-primary btn-sm">Edit</a>
                                        <form asp-page="Index" method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@project.Id" />
                                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this project?')">Delete</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p class="text-center">No projects uploaded yet.</p>
                }
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper-core.min.js"
            integrity="sha384-jj+cOz+Rgx+F1Us+r/U44Ftu05cCVg0s9XpZLAgJHOUETMh0Qg1E/d63yTJYOVhj"
            crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
